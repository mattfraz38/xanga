<h1>All Posts</h1>

<ol>
  <% @posts.each do |post| %>
      <li>
        <p><%= link_to post.title, post_path(post) %></p>
        <p><%= link_to 'Edit', edit_post_path(post) %></p>
        <small><%= link_to post.user.username, users_path(post) %></small>
      </li>
  <% end %>
</ol>

<%= link_to 'New Post', new_post_path %>
